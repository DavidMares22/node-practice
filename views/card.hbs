<h1>Card</h1>
<div id="card">
{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        
        {{#each courses}}

        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><strong>Price:</strong> <span class="price"> {{price}}</span></p>

<form action="/order" method="post">
<input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn">Make order</button>
</form>
{{else}}

<p>Card is empty</p>
{{/if}}

</div>